{% extends 'base.html.twig' %}

{% block title %}Datos{% endblock %}

{% block body %}

    {{ dump(productos) }}

    {% for message in app.flashes('success') %}
        <div class="bg-success text-light p-3">
            {{ message }}
        </div>
    {% endfor %}

    <div class="container mt-5">
        <ul>
            {% for p in productos %}
                <li>
                    {{ p.id }}: {{ p.nombre }} - {{ p.codigo }}.
                    {% if p.categoria and p.categoria.id > 0 %}
                        Categoria: {{ p.categoria.nombre }}.
                    {% else %}
                        Sin categorizar.
                    {% endif %}
                    <a href="{{ path('removeProducto', {'id': p.id}) }}">Eliminar</a>
                </li>
            {% endfor %}
        </ul>

        <hr class="bg-dark">

        <p>
            <a href="{{ path('addProducto') }}">AÃ±adir producto</a>
            |
            <a href="{{ path('busquedas') }}">Buscar producto</a>
        </p>
    </div>

{% endblock %}
