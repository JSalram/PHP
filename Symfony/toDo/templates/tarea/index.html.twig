{% extends 'base.html.twig' %}

{% block title %}ToDo{% endblock %}

{% block body %}
    <h1>Lista de tareas</h1>

    <table class="table table-striped">
        <thead>
        <tr>
            <th></th>
            <th>Descripción</th>
            <th>Creado por</th>
            <th>Finalizada</th>
            <th>Acciones</th>
        </tr>
        </thead>
        <tbody class="align-middle">
        {% for tarea in tareas %}
            <tr>
                <td>{{ loop.index }}</td>
                <td><a href="{{ path('tarea_show', {'id': tarea.id}) }}">{{ tarea.descripcion | capitalize }}</a></td>
                <td>{{ tarea.usuario ? tarea.usuario : 'Invitado' }}</td>
                <td>{{ tarea.finalizada ? 'Sí' : 'No' }}</td>
                <td class="d-flex">
                    <a class="btn btn-link" href="{{ path('tarea_edit', {'id': tarea.id}) }}">Editar</a>
                    {{ include('tarea/_delete_form.html.twig', {'button_type': 'btn-link text-danger'}) }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aún no tienes tareas</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
